

<div class="rounded m-2 p-2 w-50">
    <%= form_with model: category do |form| %>
        <div class="mb-3">
            <%= form.label :category_name, class: "form-label" %><br />
                <%= form.text_field :category_name , class: "form-control border
    border-secondary w-50" %>

                    <% category.errors.full_messages_for(:category_name).each do |message| %>
                        <div class="text-danger">
                            <%= message %>
                        </div>
                    <% end %>
        </div>

        <div class="mb-3">
            <%= form.label :description , class: "form-label" %><br />
                <%= form.text_area :description,class: "form-control border border-secondary w-50" %>

                    <% category.errors.full_messages_for(:description).each do |message| %>
                        <div class="text-danger">
                            <%= message %>
                        </div>
                    <% end %>
        </div>

        <%= form.submit "Submit" , class: "btn btn-primary btn-sm" %>
      
    <% end %>
</div>